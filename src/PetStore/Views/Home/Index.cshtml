@model IEnumerable<PetStore.Models.Product>

    <div>
        <div id="photoCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#photoCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#photoCarousel" data-slide-to="1"></li>
                <li data-target="#photoCarousel" data-slide-to="2"></li>
                <li data-target="#photoCarousel" data-slide-to="3"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="~/img/carousel/cavalier.jpg" alt="cavalier">
                </div>

                <div class="item">
                    <img src="~/img/carousel/collie.jpg" alt="collie">
                </div>

                <div class="item">
                    <img src="~/img/carousel/cat.jpg" alt="cat">
                </div>

                <div class="item">
                    <img src="~/img/carousel/fish.jpg" alt="fish">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#photoCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#photoCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div class="row popular-products-container">
            <div class="col-sm-4 col-md-6 popular-products">
                <div class="thumbnail">
                    <img class="img-rounded" src="~/img/products/food/go.jpg" alt="popular-product" />
                    <div class="caption">
                        <h4>GO! - Best Dog Food</h4>
                        <span>$20</span>
                        <p><button id="add-to-cart-btn" class="btn btn-primary" role="button">Buy Now!</button></p>
                    </div>
                </div>
                <div class="thumbnail">
                    <img class="img-rounded" src="~/img/products/Toys/ceaser.jpg" alt="popular-product" />
                    <div class="caption">
                        <h4>Ceaser Milan Toy</h4>
                        <span>$10</span>
                        <p><a href="#" class="add-to-cart-btn btn btn-primary" role="button">Buy Now!</a></p>
                    </div>
                </div>
                <div class="thumbnail">
                    <img class="img-rounded" src="~/img/products/food/bowls.jpg" alt="popular-product" />
                    <div class="caption">
                        <h4>High Bowls</h4>
                        <span>$25</span>
                        <p><a href="#" class="btn add-to-cart-btn btn-primary" role="button">Buy Now!</a></p>
                    </div>
                </div>
            </div>
        </div>

        <video class="pull-right" controls="controls" poster="https://images-na.ssl-images-amazon.com/images/I/51-YH7KBahL._SX425_.jpg">
            <source type="video/mp4" src="https://images-na.ssl-images-amazon.com/images/I/C1UnLxHAkNS.mp4"/>
        </video>
    </div>