@model IEnumerable<PetStore.Models.Product>

<div class="row products-container">
    @if (Model.Count() != 0)
    {
        <h3 class="products-title">@Model.First().Category - @Model.First().SubCategory</h3>
    }
    else
    {
        <h3 class="products-title">No available products in this category.</h3>
    }
    <div class="col-sm-4 col-md-6 popular-products">

        @foreach (var item in Model)
            {
            <div class="thumbnail">
                <img class="img-rounded" src="~@item.Image" alt="product" />
                <div class="caption">
                    <a asp-controller="Products" asp-action="Details" asp-route-id=@item.Id><h4>@item.Name</h4></a>
                    <span class="price">@item.Price$</span>
                    <button class="btn add-to-cart-btn btn-primary" role="button">Add To Cart</button>
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="delete-product" asp-controller="Products" asp-action="Delete" asp-route-id=@item.Id><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
                    }
                </div>
            </div>
        }
    </div>
</div>
